# Chimera Core API Settings
CHIMERA_HOST=127.0.0.1
CHIMERA_PORT=8000
CHIMERA_LOG_LEVEL=INFO
CHIMERA_RELOAD=true
CHIMERA_ENV=development
CHIMERA_DEBUG=true

# Database Settings
CHIMERA_DB_URL=sqlite:///data/chimera.db

# API Authentication
CHIMERA_API_KEY=your_api_key_here
CHIMERA_ENABLE_API_AUTH=true

# AI Service Settings
CHIMERA_AI_PROVIDER=openai
CHIMERA_AI_KEY=your_openai_api_key_here
CHIMERA_AI_MODEL=gpt-4-turbo
CHIMERA_AI_TEMPERATURE=0.7
CHIMERA_AI_MAX_TOKENS=4000

# CORS Settings
CHIMERA_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Data Directories
CHIMERA_DATA_DIR=./data
CHIMERA_RULES_DIR=./data/rules
CHIMERA_STATIC_DIR=static
CHIMERA_TEMPLATES_DIR=templates

# Server URL for callbacks
CHIMERA_SERVER_URL=http://localhost:8000 